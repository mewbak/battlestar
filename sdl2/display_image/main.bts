const image_filename_z = "boxes.bmp", 0
const init_msg = "Initializing SDL 2..."
const quit_msg = "Shutting down SDL 2..."
const display_msg = "Displaying image..."
const load_msg1 = "Loading "
const load_msg2 = "..."
const done = "ok\n"

extern init_sdl
extern load_bmp
extern display
extern close_sdl

extern SDL_Delay
extern SDL_Quit

inline_c

#include <SDL2/SDL.h>

SDL_Window* win;
SDL_Renderer* ren;
SDL_Texture* tex;

void init_sdl() {
    SDL_Init(SDL_INIT_TIMER | SDL_INIT_VIDEO);
    SDL_CreateWindowAndRenderer(960, 540, SDL_WINDOW_SHOWN, &win, &ren);
}

void load_bmp(char* filename) {
    SDL_Surface *bmp = SDL_LoadBMP(filename);
    tex = SDL_CreateTextureFromSurface(ren, bmp);
    SDL_FreeSurface(bmp);
}

void display() {
    SDL_RenderClear(ren);
    SDL_RenderCopy(ren, tex, NULL, NULL);
    SDL_RenderPresent(ren);
}

void close_sdl() {
    SDL_DestroyTexture(tex);
    SDL_DestroyRenderer(ren);
    SDL_DestroyWindow(win);
}

end

fun main
    // Initialize SDL2
    print(init_msg)
    init_sdl
    print(done)

    // Load the bitmap image
    print(load_msg1)
    print(image_filename_z)
    print(load_msg2)
    funparam[0] = image_filename_z
    load_bmp
    print(done)

    // Display the image for 2 seconds
    print(display_msg)
    loop 20
        // Render the image
        display
        // Wait 100 ms
        funparam[0] = 100
        SDL_Delay
    end
    print(done)

    // Close down SDL2
    print(quit_msg)
    close_sdl
    SDL_Quit
    print(done)
end

